{
  "extends": ["config:recommended"],
  "repositories": ["babywyrm/demo"],
  "autodiscover": true,
  "forkProcessing": true,
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "enabled": true
    },
    {
      "enabled": true,
      "matchPackageNames": [
        "/^python/",
        "/^npm/",
        "/^node/",
        "/^docker/",
        "/^maven/",
        "/^java/"
      ]
    }
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**"
  ]
}

