{
  "extends": ["config:recommended"],
  "repositories": ["babywyrm/demo"],
  "autodiscover": true,
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "enabled": true
    },
    {
      "matchPackagePatterns": ["^python", "^npm", "^node", "^docker", "^maven", "^java"],
      "enabled": true
    }
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/test/**",
    "**/tests/**",
    "**/__fixtures__/**"
  ]
}

